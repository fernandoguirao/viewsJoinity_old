include ../headerProfile


h3.ui.header Edit your personal information
.ui.horizontal.section.divider

.ui.form.grid
  .row
    .wide.five.column
      p Full Name
    .wide.eleven.column.two.fields
      .field
        input(placeholder="First Name",type="text")
      .field
        input(placeholder="Last Name",type="text")
  .row
    .wide.five.column
      p Email
    .wide.eleven.column.field
      input(placeholder="Email" type="text")
  .row
    .wide.five.column
      p Gender
    .wide.eleven.column.field
      .grouped.inline.fields
        .field
          .ui.radio.checkbox
            input#radio-id-01(type="radio",name="gender")
            label(for="radio-id-01")
          label(for="radio-id-01") Male
        .field
          .ui.radio.checkbox
            input#radio-id-02(type="radio",name="gender")
            label(for="radio-id-02")
          label(for="radio-id-02") Female
        .field
          .ui.radio.checkbox
            input#radio-id-03(type="radio",name="gender")
            label(for="radio-id-03")
          label(for="radio-id-03") Other
  .row
    .wide.five.column
      p Age
    .wide.eleven.column.field
      input(placeholder="Age" type="text")
  .row
    .wide.five.column
      p City
    .wide.eleven.column.field
      input(placeholder="City" type="text")
  .row
    .wide.five.column
      p College or center
    .wide.eleven.column.field
      input(placeholder="College or center" type="text")
  .row
    .wide.five.column
      p Company
    .wide.eleven.column.field
      input(placeholder="Company" type="text")
  .row
    .wide.five.column
    .wide.eleven.column.field
      .ui.submit.massive.button Save changes

h3.ui.header Edit your interests
.ui.horizontal.section.divider

h4.ui.header Hobbies

.ui.form.grid
  .row
    .wide.five.column
      p Wich ones are your favourites
    .wide.eleven.column
      .field
        label Category
        .ui.edituser.selection.dropdown
          i.dropdown.icon
          .text categoryName01
          .menu.ui.transition.hidden
            .item categoryName01
            .item categoryName02
      .field
        label Hobby
        .ui.edituser.selection.dropdown
          i.dropdown.icon
          .text hobbyName01
          .menu.ui.transition.hidden
            .item hobbyName01
            .item hobbyName02
      .field
        label
        .ui.submit.button Add hobby

  .row
    .wide.five.column
      p Did't found your hobby in the list?
    .wide.eleven.column
      .field
        input(placeholder="Name your hobby",type="text")
      .field
        .ui.submit.button Add it to joinity

  .row
    .wide.five.column
      p Your hobbies
    .wide.eleven.column
      .ui.inline.fields
        .field
          .ui.checkbox
            input#checkbox-id-01(type="checkbox")
            label.box(for="checkbox-id-01")
          label(for="checkbox-id-01") HobbyName
        .field
          .ui.checkbox
            input#checkbox-id-02(type="checkbox")
            label.box(for="checkbox-id-02")
          label(for="checkbox-id-02") HobbyName
        .field
          .ui.checkbox
            input#checkbox-id-03(type="checkbox")
            label.box(for="checkbox-id-03")
          label(for="checkbox-id-03") HobbyName
        .field
          .ui.checkbox
            input#checkbox-id-04(type="checkbox")
            label.box(for="checkbox-id-04")
          label(for="checkbox-id-04") HobbyName
      .field
        .ui.submit.button Save your changes

